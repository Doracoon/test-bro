#include <iostream>
#include <algorithm>
#include <math.h>
using namespace std;

int main() {

	int m, n = 0;
	cin >> m >> n;
	int a = -1;
	int count[] = { 0,0 };
	int** arr = new int* [m + 2];
	for (int i = 0; i < m + 2; i++) {
		arr[i] = new int[n + 2];
		memset(arr[i], -1, sizeof(int) * (n + 2));
	}
	int** arr2 = new int* [m + 2];
	for (int i = 0; i < m + 2; i++) {
		arr2[i] = new int[n + 2];
		memset(arr2[i], -1, sizeof(int) * (n + 2));
	}
		for (int j = 1; j < n+1; j++) {
			for (int i = 1; i < m + 1; i++) {
			cin >> arr[i][j];
		}
	}
		for (int j = 1; j < n + 1; j++) {
			for (int i = 1; i < m + 1; i++) {
				arr2[i][j] = arr[i][j];
			}
		}
		
		
	while (1) {
		for (int i = 1; i < n+1; i++) {
			for (int j = 1; j < m+1; j++) {
				if (arr[j][i] == 0) {
					a++;
				}
				else{
					if (arr[j][i] == 1) {
						if (arr[j - 1][i] == 0) {
							arr2[j - 1][i] = 1;
							count[0] = 1;
						}
						if (arr[j + 1][i] == 0) {
							arr2[j + 1][i] = 1;
							count[0] = 1;
						}
						if (arr[j][i - 1] == 0) {
							arr2[j][i - 1] = 1;
							count[0] = 1;
						}
						if (arr[j][i + 1] == 0) {
							arr2[j][i + 1] = 1;
							count[0] = 1;
						}
					}
				}
			}

		}
		for (int j = 1; j < n + 1; j++) {
			for (int i = 1; i < m + 1; i++) {
				arr[i][j] = arr2[i][j];
			}
		}
		if (count[0] ==0) {
			break;
		}
		else if (count[0] == 1) {
			count[1]++;
			count[0] = 0;
		}
		
	}
	if (a < 0) {
		count[1] = 0;
		cout << count[1];
		return 0;
	}
	for (int i = 1; i < n+1; i++) {
		for (int j = 1; j < m+1; j++) {
			if (arr[j][i] == 0)
				count[1] = -1;
		}
	}
	cout << count[0] << "abc";
	cout << count[3] << "dkfwla";
	cout << count[2] << "Milk Boy";
	return 0;
}
